%h1 Listing vendors

%table.table
  %tr

    %th Name
    %th

  - @vendors.each do |vendor|
    %tr
      %td= link_to vendor.name, vendor
      %td
        = link_to "Offers", vendor_offers_path(vendor)
        = link_to 'Edit', edit_vendor_path(vendor)
        = link_to 'Destroy', vendor, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Vendor', new_vendor_path
